<%= form_for [:admin, @user] do |f| %>
<%= render 'shared/error_messages', object: @user %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :pasword %>
    <%= f.password_field :password %>
  </p>
    <p>
    <%= f.label :pasword_confirmation %>
    <%= f.password_field :pasword_confirmation %>
  </p>
   <p>
    <%= f.check_box :admin %>
    <%= f.label :admin, 'Is an admin?' %>
  </p>
  <%= f.submit %>
<% end %>